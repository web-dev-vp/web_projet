<button type="button" class="btn btn-primary" data-toggle="modal" data-target="#exampleModal" data-whatever="@mdo">+ Add
    recipe</button>

<div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel"
    aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">New message</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <form action="dashboard/add-recipe" method="post" enctype="multipart/form-data">
                    <div class="form-group">
                        <label for="name" class="col-form-label">Name dish:</label>
                        <input type="text" class="form-control" id="name" name="name">
                    </div>
                    <div class="form-group">
                        <label for="date" class="col-form-label">Date:</label>
                        <textarea class="form-control" id="date" name="date"></textarea>
                    </div>
                    <input id="input-b1" name="input-b1" type="file" class="file" data-browse-on-zone-click="true">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                    <button type="submit" class="btn btn-primary" id="save-button">Save recipe</button>
                </form>

                {{!-- <form action="dashboard/add-recipe" method="POST" enctype="multipart/form-data">
                    <input type="text" name="name" />
                    <input type="file" name="image"> <input type="submit" value="Upload">
                </form> --}}
            </div>


        </div>
    </div>
</div>

{{#each data}}
{{!-- {{>recipe_card this}} --}}
<div class="col-md-3 recipe-section">
    <img src={{img}} alt="">
    <h4 class="name-dish">{{name}}</h4>
    <ul class="stat-recipe">
        <li class="duration"><i class="fa fa-clock-o" aria-hidden="true"></i><span class="hour"></span> <span
                class="mins">{{duration}}</span></li>
        <li class="complex"> <i class="fa fa-bolt" aria-hidden="true"></i> {{complex}} </li>
        <li class="serving"> <i class="fa fa-user" aria-hidden="true"></i> {{serving}} people(s)</li>
    </ul>
    <button type="button" class="btn btn-secondary btn-lg explore">Explore now</button>
</div>
{{/each}}

