<div class="col-md-4">
    <div class="card" onclick="location.href='/recipes/{{uri}}'">
        <div class="img-thum">
            <img src="{{img}}">
        </div>
        <div class="card-body">
            <h3 class="recipe-title">
                {{name}}
            </h3>
        </div>
        <p class="card-text">
            <small class="text-muted">
                <strong>.</strong>
                    <span><i class="fa fa-clock-o"></i><span id="time">{{duration}} Mins</span></span>
                    <span><i class="fa fa-bolt"></i><span id="level">{{complex}}</span></span>
                    <span><i class="fa fa-users"></i><span id="serving">{{serve}} People</span></span>
            </small>
        </p>
    </div>
</div>
