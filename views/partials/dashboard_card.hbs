<div class="col-md-4" id="{{uri}}">
    <div class="card mb-4 box-shadow">
        <img class="card-img-top" data-src="holder.js/100px225?theme=thumb&bg=55595c&fg=eceeef&text=Thumbnail"
            alt="Card image cap" src="./images/logo.png" height="200px">
        <div class="card-body">
            <h3>{{name}}</h3>
            <p class="card-text">No description</p>
            <div class="d-flex justify-content-between align-items-center">
                <div class="btn-group">
                    <button type="button" class="btn btn-sm btn-outline-secondary view-button">View</button>
                    <button type="button" class="btn btn-sm btn-outline-secondary edit-button">Edit</button>
                    <button type="button" class="btn btn-sm btn-outline-secondary delete-button"
                        key="spicy-grill-shrimped">Delete</button>
                </div>
            </div>
        </div>
    </div>
</div>